        $.getJSON(url, function(data) {
            $('#select-ucilnica').empty();
            for (var uc_id in data.ucilnice) {
                var opt = $('<option />', {
                    value: uc_id,
                    text: data.ucilnice[uc_id]
                });
                $('#select-ucilnica').append(opt);
            }
        });
    });
};
